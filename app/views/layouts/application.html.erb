<!DOCTYPE html>
<html>
<head>
  <title>Hiyoung</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<style>
.word {cursor:pointer}
.word:hover {background-color:#f50}
</style>
<body>
<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">Hi, Young! Hi, Young!</a>
      <div class="navbar-content">
        <ul class="nav">
          <li>
            <a href="/study/index">Home</a> 
          </li>
          <li>
            <a href="/study/topic">Topic</a> 
          </li>
          <li>
            <a href="/study/essay">Essay</a> 
          </li>
					<% if current_user %>
          <li>
            <a href="/study/news"><%=current_user.name%> <span class="badge badge-important"><%=news_count%></span></a>
          </li>
					<li>
						<%= link_to "Sign out", signout_path, id: "sign_out" %>
					</li>
					<% else %>
					<li>
						<%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
					</li>
					<% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<% if flash[:notice] %>
	  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <b>Alert!</b> <%=flash[:notice]%></div>
<% end %>

<%= yield %>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
$('.word').click(function() {
	var query = $(this).text();
	$("#dic").attr("src", "http://small.dic.daum.net/search.do?q="+ query +"&dic=ee");
});

</script>
</body>
</html>
