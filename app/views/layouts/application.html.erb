<!DOCTYPE html>
<html>
<head>
  <title>Hiyoung</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">Hi, Young! Hi, Young!</a>
      <div class="navbar-content">
        <ul class="nav">
          <li>
            <a href="/study/index">Home</a> 
          </li>
          <li>
            <a href="/study/topic">Topic</a> 
          </li>
          <li>
            <a href="/study/essay">Essay</a> 
          </li>
					<% if current_user %>
          <li>
            <a href="/study/news"><%=current_user.name%></a> 
          </li>
					<li>
						<%= link_to "Sign out", signout_path, id: "sign_out" %>
					</li>
					<% else %>
					<li>
						<%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
					</li>
					<% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<% if flash[:notice] %>
	  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <b>Alert!</b> <%=flash[:notice]%></div>
<% end %>

<%= yield %>

</body>
</html>
