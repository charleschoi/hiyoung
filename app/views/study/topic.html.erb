<div class="container-fluid">
  <div class="row-fluid">
    <div class="span8">
		<% @topic.each_with_index do |t, index| %>
			<% if index % 2 == 0 %>
				<div class="row-fluid">
			<% end %>
        <div class="span6">
          <h2>Topic #<%=t.id%></h2>
          <p><%=t.content%></p>
          <a class="btn btn-block btn-primary" href="/study/write/<%=t.id%>"><span class="btn-label">Write Essay</span></a>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Essays</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
						<% t.essays.each_with_index do |e, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= e.summary %></td>
                <td>
                  <a href="/study/read/<%=e.id-%>" class="btn btn-warning btn-mini">Read</a> 
                </td>
              </tr>
						<% end %>
            </tbody>
          </table>
        </div><!-- span6 -->
			<% if index % 2 == 1 %>
				</div><!-- row-fluid -->
			<% end %>
		<% end %>
    </div><!-- span8 -->
